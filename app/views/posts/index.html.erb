<%= provide(:title, 'All posts') %>

<h2 class="text-center m-5">Post Feed</h2>
<hr>
<div class="container m-5">
  <ul>
    <% @posts.each do |p| %>
    <li> <%= gravatar_for p.user, size: 50 %></li>
    <li><%= link_to 'View Post', post_path(p) %></li>
    <li>Title: <%= p.title %></li>
    <li>Content: <%= p.content %></li>
    <hr>
    <% end %>
  </ul>
</div>